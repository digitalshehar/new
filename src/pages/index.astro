  }
];

const heroSlides = [
  {
    image: '/images/hero/slide1.jpg',
    title: 'Discover the Joy of Cooking',
    description: 'Explore our collection of delicious recipes'
  },
  {
    image: '/images/hero/slide2.jpg',
    title: 'Cook Like a Pro',
    description: 'Learn essential cooking techniques'
  },
  {
    image: '/images/hero/slide3.jpg',
    title: 'Fresh & Seasonal',
    description: 'Get inspired by seasonal ingredients'
  }
];

const categories = [
  { name: 'Breakfast', icon: 'üç≥', link: '/recipes/category/breakfast' },
  { name: 'Lunch', icon: 'ü•™', link: '/recipes/category/lunch' },
  { name: 'Dinner', icon: 'üçΩÔ∏è', link: '/recipes/category/dinner' },
  { name: 'Desserts', icon: 'üç∞', link: '/recipes/category/desserts' },
  { name: 'Vegetarian', icon: 'ü•ó', link: '/recipes/category/vegetarian' },
  { name: 'Quick & Easy', icon: '‚ö°', link: '/recipes/category/quick-easy' },
  { name: 'Healthy', icon: 'ü•ë', link: '/recipes/category/healthy' },
  { name: 'Baking', icon: 'ü•ñ', link: '/recipes/category/baking' }
