---
import Layout from '../../layouts/Layout.astro';
import PersonalizedRecommendations from '../../components/dashboard/PersonalizedRecommendations.astro';
import CookingProgress from '../../components/dashboard/CookingProgress.astro';
import WeeklyMealPlan from '../../components/dashboard/WeeklyMealPlan.astro';

// For static build, we'll use placeholder data
const profile = {
  name: 'John Doe',
  email: 'john@example.com',
  bio: 'Food enthusiast and home cook'
};
---

<Layout title="My Account | Recipe Website">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Top Navigation Bar -->
    <nav class="bg-white dark:bg-gray-800 shadow">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <h1 class="text-xl font-bold text-gray-900 dark:text-white">My Account</h1>
            </div>
          </div>
          <div class="flex items-center">
            <a
              href="/account/login"
              class="ml-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500"
            >
              Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <div class="py-10">
      <!-- User Profile Section -->
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-8">
          <div class="px-4 py-5 sm:px-6 flex items-center">
            <div class="h-20 w-20 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-2xl font-bold mr-4">
              JD
            </div>
            <div>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white">{profile.name}</h2>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{profile.email}</p>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{profile.bio}</p>
            </div>
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
          <!-- Recipes Created -->
          <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                      Recipes Created
                    </dt>
                    <dd class="flex items-baseline">
                      <div class="text-2xl font-semibold text-gray-900 dark:text-white">
                        12
                      </div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>

          <!-- Favorites -->
          <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">
                      Favorite Recipes
                    </dt>
                    <dd class="flex items-baseline">
                      <div class="text-2xl font-semibold text-gray-900 dark:text-white">
                        8
                      </div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-8">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Recent Activity</h3>
          </div>
          <div class="border-t border-gray-200 dark:border-gray-700">
            <ul class="divide-y divide-gray-200 dark:divide-gray-700">
              <li class="px-4 py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                      Created a new recipe: Perfect Pasta
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      2 days ago
                    </p>
                  </div>
                </div>
              </li>
              <li class="px-4 py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                      Added Chocolate Cake to favorites
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      5 days ago
                    </p>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
        
        <!-- Personalized Recommendations -->
        <div class="mb-8">
          <PersonalizedRecommendations />
        </div>
        
        <!-- Cooking Progress -->
        <div class="mb-8">
          <CookingProgress />
        </div>
        
        <!-- Weekly Meal Plan -->
        <div class="mb-8">
          <WeeklyMealPlan />
        </div>
      </div>
    </div>
  </div>
</Layout>
