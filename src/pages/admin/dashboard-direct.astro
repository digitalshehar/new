---
import AdminDirectLayout from '../../layouts/AdminDirectLayout.astro';

// Mock admin data - in a real app, this would come from a database
const stats = [
  { name: 'Total Recipes', value: '23' },
  { name: 'Total Blog Posts', value: '14' },
  { name: 'Users', value: '452' },
  { name: 'Page Views (Monthly)', value: '12,982' },
];

// No authentication check on this page - direct access
---

<AdminDirectLayout title="Admin Dashboard (Direct Access)">
  <div class="py-6">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Dashboard (No Login Required)</h1>
      <div class="mt-4 bg-amber-100 border border-amber-400 text-amber-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Direct Access Mode!</strong>
        <span class="block sm:inline"> This is a special dashboard version with no login required. For security, replace with authenticated version in production.</span>
      </div>
    </div>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
      <div class="py-4">
        <!-- Stats grid -->
        <div class="mt-4">
          <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
            {stats.map((stat) => (
              <div class="overflow-hidden rounded-lg bg-white dark:bg-gray-800 px-4 py-5 shadow sm:p-6">
                <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">{stat.name}</dt>
                <dd class="mt-1 text-3xl font-semibold tracking-tight text-jamie-orange">{stat.value}</dd>
              </div>
            ))}
          </div>
        </div>

        <!-- Recent activity section -->
        <div class="mt-8">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">Recent Activity</h2>
          
          <div class="mt-4 overflow-hidden rounded-lg bg-white dark:bg-gray-800 shadow">
            <div class="p-6">
              <ul class="space-y-4">
                <li class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-green-100 text-green-600">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                      </svg>
                    </span>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">New recipe added: Spicy Chicken Curry</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">2 hours ago</p>
                  </div>
                </li>
                <li class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-blue-100 text-blue-600">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                      </svg>
                    </span>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">Blog post edited: "Top 10 Summer Recipes"</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">5 hours ago</p>
                  </div>
                </li>
                <li class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-yellow-100 text-yellow-600">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </span>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">User feedback received on recipe: Italian Pasta Bake</p>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Yesterday at 12:34 PM</p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Admin sections links -->
        <div class="mt-8">
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">Admin Sections</h2>
          
          <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <a href="/admin/recipes-direct" class="block overflow-hidden rounded-lg bg-white dark:bg-gray-800 shadow hover:bg-gray-50 dark:hover:bg-gray-700">
              <div class="p-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-jamie-orange">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12a7.5 7.5 0 0015 0m-15 0a7.5 7.5 0 1115 0m-15 0H3m16.5 0H21m-1.5 0H12m-8.457 3.077l1.41-.513m14.095-5.13l1.41-.513M5.106 17.785l1.15-.964m11.49-9.642l1.149-.964M7.501 19.795l.75-1.3m7.5-12.99l.75-1.3m-6.063 16.658l.26-1.477m2.605-14.772l.26-1.477m0 17.726l-.26-1.477M10.698 4.614l-.26-1.477M16.5 19.794l-.75-1.299M7.5 4.205L12 12m6.894 5.785l-1.149-.964M6.256 7.178l-1.15-.964m15.352 8.864l-1.41-.513M4.954 9.435l-1.41-.514M12.002 12l-3.75 6.495" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-base font-medium text-gray-900 dark:text-white">Recipes Section</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage all recipes and categories</p>
                  </div>
                </div>
              </div>
            </a>
            
            <a href="/admin/blog-direct" class="block overflow-hidden rounded-lg bg-white dark:bg-gray-800 shadow hover:bg-gray-50 dark:hover:bg-gray-700">
              <div class="p-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-jamie-orange">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-base font-medium text-gray-900 dark:text-white">Blog Management</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Create and edit blog content</p>
                  </div>
                </div>
              </div>
            </a>
            
            <div class="block overflow-hidden rounded-lg bg-white dark:bg-gray-800 shadow hover:bg-gray-50 dark:hover:bg-gray-700">
              <div class="p-6">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-6 w-6 text-jamie-orange">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-base font-medium text-gray-900 dark:text-white">Media Library</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage images and videos</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminDirectLayout>
