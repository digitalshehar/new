---
import AdminDirectLayout from '../../layouts/AdminDirectLayout.astro';

// Sample blog data for the direct access version
const blogPosts = [
  { 
    id: 1, 
    title: 'Top 10 Summer Recipes', 
    status: 'Published', 
    publishDate: '2025-01-20', 
    excerpt: 'Discover the best recipes to enjoy during the hot summer months...' 
  },
  { 
    id: 2, 
    title: 'Healthy Breakfast Ideas', 
    status: 'Published', 
    publishDate: '2025-01-15', 
    excerpt: 'Start your day right with these nutritious breakfast recipes...' 
  },
  { 
    id: 3, 
    title: 'Quick Dinner Recipes', 
    status: 'Draft', 
    publishDate: '-', 
    excerpt: 'Easy and quick dinner recipes for busy weeknights...' 
  },
  { 
    id: 4, 
    title: 'Baking Tips for Beginners', 
    status: 'Published', 
    publishDate: '2025-01-10', 
    excerpt: 'Essential tips to help beginners achieve baking success...' 
  },
  { 
    id: 5, 
    title: 'Vegetarian Meal Ideas', 
    status: 'Scheduled', 
    publishDate: '2025-02-28', 
    excerpt: 'Delicious vegetarian meal ideas that everyone will love...' 
  }
];

// No authentication check on this page - direct access
---

<AdminDirectLayout title="Blog Management | Admin Direct Access">
  <div class="py-6">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
      <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Blog Posts (Direct Access)</h1>
      <div class="mt-4 bg-amber-100 border border-amber-400 text-amber-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Direct Access Mode!</strong>
        <span class="block sm:inline"> This is a special dashboard version with no login required. For security, replace with authenticated version in production.</span>
      </div>
    </div>
    
    <div class="mx-auto max-w-7xl mt-8 px-4 sm:px-6 md:px-8">
      <div class="flex justify-between items-center">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Blog Post List</h2>
        <div>
          <button
            class="inline-flex items-center rounded-md border border-transparent bg-jamie-orange px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-amber-600 focus:outline-none focus:ring-2 focus:ring-jamie-orange focus:ring-offset-2"
          >
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            New Blog Post
          </button>
        </div>
      </div>
      
      <!-- Blog posts table -->
      <div class="mt-4 flex flex-col">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 dark:text-white sm:pl-6">Title</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Status</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Publish Date</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white">Excerpt</th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">Actions</span>
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700 bg-white dark:bg-gray-900">
                  {blogPosts.map((post) => (
                    <tr>
                      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 dark:text-white sm:pl-6">
                        {post.title}
                      </td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm">
                        <span class={`inline-flex rounded-full px-2 text-xs font-semibold leading-5 ${
                          post.status === 'Published' 
                            ? 'bg-green-100 text-green-800' 
                            : post.status === 'Draft' 
                              ? 'bg-gray-100 text-gray-800'
                              : 'bg-yellow-100 text-yellow-800'
                        }`}>
                          {post.status}
                        </span>
                      </td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-400">{post.publishDate}</td>
                      <td class="px-3 py-4 text-sm text-gray-500 dark:text-gray-400 max-w-xs truncate">{post.excerpt}</td>
                      <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                        <div class="flex justify-end space-x-2">
                          <button class="text-jamie-orange hover:text-amber-700">
                            Edit
                          </button>
                          <button class="text-red-600 hover:text-red-900">
                            Delete
                          </button>
                        </div>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminDirectLayout>
