---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout>
  <Navigation />
  
  <main class="pt-32 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="relative">
          <div class="sticky top-32">
            <h1 class="text-4xl md:text-5xl font-bold text-jamie-blue mb-6">Get in Touch</h1>
            <p class="text-xl text-gray-600 mb-8">
              Have a question about recipes, restaurants, or just want to say hello? We'd love to hear from you!
            </p>
            
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="bg-jamie-orange bg-opacity-10 p-3 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-jamie-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-jamie-blue">Email Us</h3>
                  <p class="text-gray-600">hello@jamieoliver.com</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="bg-jamie-orange bg-opacity-10 p-3 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-jamie-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-jamie-blue">Visit Us</h3>
                  <p class="text-gray-600">123 Kitchen Street<br/>London, UK</p>
                </div>
              </div>
              
              <div class="flex items-start gap-4">
                <div class="bg-jamie-orange bg-opacity-10 p-3 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-jamie-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-jamie-blue">Call Us</h3>
                  <p class="text-gray-600">+44 20 1234 5678</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-xl p-8">
          <form class="space-y-6" id="contact-form">
            <div>
              <label for="name" class="block text-jamie-blue font-medium mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-jamie-orange focus:border-transparent"
              />
            </div>

            <div>
              <label for="email" class="block text-jamie-blue font-medium mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-jamie-orange focus:border-transparent"
              />
            </div>

            <div>
              <label for="subject" class="block text-jamie-blue font-medium mb-2">Subject</label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-jamie-orange focus:border-transparent"
              >
                <option value="">Select a subject</option>
                <option value="recipe">Recipe Question</option>
                <option value="restaurant">Restaurant Inquiry</option>
                <option value="booking">Book a Table</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-jamie-blue font-medium mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-3 rounded-md border border-gray-300 focus:ring-2 focus:ring-jamie-orange focus:border-transparent"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-jamie-orange text-white py-3 rounded-md font-medium hover:bg-opacity-90 transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animate contact information
  gsap.from('.flex.items-start', {
    scrollTrigger: {
      trigger: '.flex.items-start',
      start: 'top center+=100',
    },
    x: -50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power3.out'
  });

  // Animate form elements
  gsap.from('form > div', {
    scrollTrigger: {
      trigger: 'form',
      start: 'top center+=100',
    },
    y: 30,
    opacity: 0,
    duration: 0.6,
    stagger: 0.1,
    ease: 'power3.out'
  });

  // Form submission animation
  const form = document.getElementById('contact-form');
  form.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Animate button
    gsap.to('button[type="submit"]', {
      scale: 0.95,
      duration: 0.1,
      yoyo: true,
      repeat: 1,
      ease: 'power2.inOut',
      onComplete: () => {
        // Show success message (you would typically handle the form submission here)
        alert('Thank you for your message! We\'ll get back to you soon.');
        form.reset();
      }
    });
  });
</script>
