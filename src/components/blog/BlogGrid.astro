---
import BlogCard from './BlogCard.astro';
import type { BlogPost } from '../../types';

interface Props {
  posts: BlogPost[];
}

const { posts } = Astro.props;
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {posts.map((post) => (
    <BlogCard
      title={post.title}
      excerpt={post.excerpt}
      image={post.image}
      date={post.date}
      author={post.author}
      slug={post.slug}
    />
  ))}
</div>
