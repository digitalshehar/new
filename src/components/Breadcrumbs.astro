---
interface Props {
  items: {
    label: string;
    href: string;
  }[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="py-4 px-4 sm:px-6 lg:px-8">
  <ol class="flex flex-wrap items-center space-x-2 text-sm">
    <li class="flex items-center">
      <a href="/" class="text-jamie-blue dark:text-jamie-accent-blue hover:text-jamie-orange transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
        <span class="sr-only">Home</span>
      </a>
    </li>
    {items.map((item, index) => (
      <li class="flex items-center">
        <svg class="w-5 h-5 text-gray-400 dark:text-gray-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        <a
          href={item.href}
          class:list={[
            'ml-2 hover:text-jamie-orange transition-colors',
            index === items.length - 1
              ? 'text-gray-600 dark:text-gray-400 pointer-events-none'
              : 'text-jamie-blue dark:text-jamie-accent-blue'
          ]}
          aria-current={index === items.length - 1 ? 'page' : undefined}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ol>
</nav>
